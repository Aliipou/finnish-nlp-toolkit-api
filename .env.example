# Environment Configuration Template
# Copy this file to .env and update values

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=True

# Advanced NLP Features (set to true to enable)
# Note: Requires additional setup (see ADVANCED_SETUP.md)
USE_VOIKKO=false        # Real Finnish morphology (requires system libvoikko)
USE_UDPIPE=false        # Dependency parsing (requires model download)
USE_SPACY=false         # spaCy NLP pipeline (requires model download)
USE_TRANSFORMERS=false  # FinBERT ML models (requires trained model)
USE_REDIS=false         # Redis caching (requires Redis server)

# Model Paths
UDPIPE_MODEL_PATH=data/models/finnish-tdt-ud-2.5-191206.udpipe
TOXICITY_MODEL_PATH=data/models/finnish-toxicity-bert

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=3600  # Cache time-to-live in seconds (1 hour)

# Frontend Configuration
FRONTEND_PORT=8501

# CORS Settings
CORS_ORIGINS=*

# Logging
LOG_LEVEL=INFO

# Database (Optional)
# DATABASE_URL=postgresql://user:password@localhost:5432/finnish_nlp
